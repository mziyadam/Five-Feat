<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FiveFeat" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.FiveFeat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Heading1">
        <item name="android:textStyle" tools:targetApi="o">bold</item>
        <item name="android:textSize" tools:targetApi="o">24sp</item>
    </style>
    <style name="Heading2">
        <item name="android:textSize" tools:targetApi="o">16sp</item>
    </style>
    <style name="Heading2.bold">
        <item name="android:textStyle" tools:targetApi="o">bold</item>
    </style>
    <style name="Heading3">
        <item name="android:textSize" tools:targetApi="o">14sp</item>
    </style>
    <style name="Heading3.bold">
        <item name="android:textStyle" tools:targetApi="o">bold</item>
    </style>
    <style name="CustomText">
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
    </style>
    <style name="CustomText.Rounded">
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="Theme.FiveFeat.AppBarOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="Theme.FiveFeat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>